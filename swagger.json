                    "type": "string"
                  },
                  "bairro": {
                    "type": "string"
                  },
                  "cidade": {
                    "type": "string"
                  },
                  "estado": {
                    "type": "string"
                  },
                  "telefone": {
                    "type": "string"
                  },
                  "celular": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "cpf": {
                    "type": "string"
                  },
                  "rg": {
                    "type": "string"
                  },
                  "veiculo": {
                    "type": "string"
                  },
                  "habilitacao": {
                    "type": "string"
                  }
                }
              },
